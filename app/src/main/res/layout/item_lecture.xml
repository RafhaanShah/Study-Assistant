<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_max_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.rafhaanshah.studyassistant.utils.SquareLayout
            android:id="@+id/letter_bg"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle">

            <TextView
                android:id="@+id/tv_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/letter_size" />

        </com.rafhaanshah.studyassistant.utils.SquareLayout>

        <TextView
            android:id="@+id/tv_lecture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/letter_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="2dp"
            android:paddingStart="4dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_lecture_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/letter_bg"
            android:paddingBottom="4dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lectureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@color/dividerGrey" />

</android.support.v7.widget.CardView>