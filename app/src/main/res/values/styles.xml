<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/materialLightBlue</item>
        <item name="colorPrimaryDark">@color/materialLightBlueDark</item>
        <item name="colorAccent">@color/materialAmber</item>
    </style>

    <!-- Flash Card theme -->
    <style name="FlashCardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/materialRed</item>
        <item name="colorPrimaryDark">@color/materialRedDark</item>
        <item name="colorAccent">@color/materialAmber</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!-- This line changes the color of text in the toolbar -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- This line changes the color of icons in toolbar -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This line changes the color of text of buttons in toolbar -->
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="FlashCardTheme.Toolbar" parent="FlashCardTheme">
        <!-- This line changes the color of text in the toolbar -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- This line changes the color of icons in toolbar -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This line changes the color of text of buttons in toolbar -->
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
